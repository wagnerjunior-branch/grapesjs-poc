generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Banner {
  id          String   @id @default(uuid())
  name        String
  projectData Json     @map("project_data")
  html        String   @db.Text
  css         String   @db.Text
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("banners")
  @@index([createdAt(sort: Desc)])
}

model Creative {
  id          String   @id @default(uuid())
  name        String
  bannerId    String   @map("banner_id")
  projectData Json     @map("project_data")
  html        String   @db.Text
  css         String   @db.Text
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("creatives")
  @@index([createdAt(sort: Desc)])
  @@index([bannerId])
}

model EditorSettings {
  id        String   @id @default(uuid())
  settings  Json     @default("{}")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("editor_settings")
}
