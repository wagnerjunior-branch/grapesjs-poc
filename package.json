{
  "name": "grapejs-poc",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "dotenv -e .env.local -- prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "dotenv -e .env.local -- prisma generate",
    "db:push": "dotenv -e .env.local -- prisma db push",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:migrate:deploy": "dotenv -e .env.local -- prisma migrate deploy",
    "db:studio": "dotenv -e .env.local -- prisma studio",
    "screenshot": "node scripts/screenshot-mobile.js",
    "compare": "node scripts/compare-screenshots.js",
    "fetch-figma": "node scripts/fetch-figma-screenshot.js"
  },
  "dependencies": {
    "@grapesjs/studio-sdk": "^1.0.0",
    "@grapesjs/studio-sdk-plugins": "^1.0.32",
    "@measured/puck": "^0.20.2",
    "@prisma/client": "^5.9.1",
    "@radix-ui/react-switch": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "grapesjs": "^0.22.14",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^2.5.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "eslint-config-prettier": "^10.1.8",
    "playwright": "^1.58.0",
    "prettier": "^3.7.4",
    "prisma": "^5.9.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
